  {
    \stycmd_generate:NNN #1 #2 \stycmd_xparsecmd:N
  }


\cs_new_protected:Nn \stycmd_generate_renew:NN
  {
    \cs_new_protected:Npn #1 ##1 ##2
      {
        \@@_cmd_define_strip:NNn #2 ##1 { ##2 }
      }
  }

%    \end{macrocode}

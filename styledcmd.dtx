%\begin{macro}{\stycmd_xparsecmd:N}
% Defines the main macro with \cs{ProvideDocumentCommand}.
%    \begin{macrocode}

\cs_new_protected:Nn \stycmd_xparsecmd:N
  {
    \ProvideDocumentCommand { #1 } { o }
      {
        \IfNoValueTF {##1}
          {
            \@@_cmd_usedef:N #1
          }
          {
            \@@_cmd_usesty_strip:Nn #1 { ##1 }
          }
      }
  }

%    \end{macrocode}
